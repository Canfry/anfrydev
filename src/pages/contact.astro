---
import Layout from '../layouts/Layout.astro';
---

<Layout title='Contact'>
  <div
    class='px-24 lg:px-48 max-sm:px-5 max-w-7xl mx-auto w-full my-16 flex flex-col items-center justify-center'
  >
    <h1 class='text-4xl font-bold text-zinc-300'>Contact me</h1>
    <div
      class='grid grid-cols-1 px-8 py-10 bg-zinc-950/40 mt-8 max-md:w-full w-[60%]'
    >
      <form>
        <div class='grid grid-cols-1 gap-6'>
          <label class='block'>
            <span class='text-zinc-300'>Name</span>
            <input
              type='text'
              name='name'
              id='name'
              placeholder='Enter your name'
              class='mt-1 block w-full rounded-sm bg-zinc-950/80 border-transparent outline-orange-400 py-2 px-3'
            />
          </label>
          <label class='block'>
            <span class='text-zinc-300'>Email</span>
            <input
              type='email'
              name='email'
              id='email'
              class='mt-1 block w-full rounded-sm bg-zinc-950/80 border-transparent outline-orange-400 py-2 px-3'
            />
          </label>
          <label class='block'>
            <span class='text-zinc-300'>Message</span>
            <textarea
              name='message'
              id='message'
              rows='3'
              class='mt-1 block w-full rounded-sm bg-zinc-950/80 border-transparent outline-orange-400 py-2 px-3'
            ></textarea>
          </label>
          <div class='w-full flex justify-start'>
            <button
            type='submit'
            class='inline-flex items-center px-4 py-2 text-base font-medium rounded-md text-zinc-700 bg-orange-400 hover:bg-orange-500'
          >
            Submit
          </button>
          </div>
          
        </div>
      </form>
    </div>
  </div>
</Layout>
