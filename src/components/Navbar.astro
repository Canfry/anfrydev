---
import Icon from 'astro-icon';
import { getRelativeLocaleUrl } from 'astro:i18n';

const aboutEsUrl = getRelativeLocaleUrl('/es/about', 'es');
const workEsUrl = getRelativeLocaleUrl('/es/work', 'es');
const contactEsUrl = getRelativeLocaleUrl('/es/contact', 'es');

const aboutFrUrl = getRelativeLocaleUrl('/fr/about', 'fr');
const workFrUrl = getRelativeLocaleUrl('/fr/work', 'fr');
const contactFrUrl = getRelativeLocaleUrl('/fr/contact', 'fr');
---

<div class='flex items-center justify-between'>
  <div class='flex items-center gap-x-4'>
    <a href='/' class='text-[#07b6D5] text-5xl'>AnfryDev</a>
    <div class='dropdown'>
      <div tabindex={0} role='button' class='btn m-1'>
        {
          Astro.url.pathname === '/es' ||
          Astro.url.pathname === '/es/about' ||
          Astro.url.pathname === '/es/work' ||
          Astro.url.pathname === '/es/contact'
            ? 'ES'
            : Astro.url.pathname === '/es' ||
              Astro.url.pathname === '/es/about' ||
              Astro.url.pathname === '/es/work' ||
              Astro.url.pathname === '/es/contact'
            ? 'FR'
            : 'EN'
        }
      </div>
      <ul
        tabindex={0}
        class='dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52'
      >
        <li>
          <a
            class={`
          ${Astro.url.pathname === '/' ? 'text-[#07b6D5] font-bold' : ''}
        `}>EN</a
          >
        </li>
        <li>
          <a
            class={`
          ${Astro.url.pathname === '/es' ? 'text-[#07b6D5] font-bold' : ''}
        `}>ES</a
          >
        </li>
        <li>
          <a
            class={`
          ${Astro.url.pathname === '/fr' ? 'text-[#07b6D5] font-bold' : ''}
        `}>FR</a
          >
        </li>
      </ul>
    </div>
  </div>
  <nav class='max-md:hidden'>
    <ul class='flex items-center justify-center gap-x-8'>
      <a
        href='/'
        class={`text-xl transition ease-out hover:text-[#94849b] duration-300  ${
          Astro.url.pathname === '/'
            ? 'text-[#fdfff7] border-b-2 border-[#07b6D5] hover:text-[#fdfff7]'
            : 'text-gray-400 border-none'
        } `}
      >
        <li>Home</li>
      </a>
      <a
        href='/about'
        class={`text-xl transition ease-out hover:text-[#94849b] duration-300 ${
          Astro.url.pathname === '/about'
            ? 'text-[#fdfff7] border-b-2 border-[#07b6D5] hover:text-[#fdfff7]'
            : 'text-gray-400 border-none'
        } `}
      >
        <li>About</li>
      </a>
      <a
        href='/work'
        class={`text-xl transition ease-out hover:text-[#94849b] duration-300 ${
          Astro.url.pathname === '/work'
            ? 'text-[#fdfff7] border-b-2 border-[#07b6D5] hover:text-[#fdfff7]'
            : 'text-gray-400 border-none'
        } `}
      >
        <li>Work</li>
      </a>
      <a
        href='https://blog.anfrydev.com'
        target='_blank'
        class={`text-xl transition ease-out hover:text-[#94849b] duration-300 ${
          Astro.url.pathname === '/blog'
            ? 'text-[#fdfff7] border-b-2 border-[#07b6D5] hover:text-[#fdfff7]'
            : 'text-gray-400 border-none'
        } `}
      >
        <li>Blog</li>
      </a>
      <a
        href='/contact'
        class={`text-xl transition ease-out hover:text-[#94849b] duration-300 ${
          Astro.url.pathname === '/contact'
            ? 'text-[#fdfff7] border-b-2 border-[#07b6D5] hover:text-[#fdfff7]'
            : 'text-gray-400 border-none'
        } `}
      >
        <li>Contact</li>
      </a>
    </ul>
  </nav>
  <div class='hidden max-md:block'>
    <div class='dropdown dropdown-end'>
      <label
        tabindex={0}
        class='transition ease-out btn m-1 bg-[#18181b] shadow-sm shadow-[#f2efea]/50 text-[#fdfff7] hover:shadow-md hover:shadow-[#f2efea]/30 duration-300'
        ><Icon
          pack='jam'
          name='menu'
          class='text-[#07b6D5] w-[36px] h-[36px] z-50'
        /></label
      >
      <ul
        tabindex={0}
        class='dropdown-content z-60 menu p-2 shadow-sm shadow-[#07b6D5] bg-[#18181b] rounded-box w-52'
      >
        <li>
          <a
            href='/'
            class={`text-lg transition ease-out hover:text-[#94849b] duration-300 ${
              Astro.url.pathname === '/'
                ? 'text-[#07b6D5]'
                : 'text-gray-200 border-none'
            } `}>Home</a
          >
        </li>
        <li>
          <a
            href='/about'
            class={`text-lg transition ease-out hover:text-[#94849b] duration-300 ${
              Astro.url.pathname === '/about'
                ? 'text-[#07b6D5]'
                : 'text-gray-200 border-none'
            } `}>About</a
          >
        </li>
        <li>
          <a
            href='/work'
            class={`text-lg transition ease-out hover:text-[#94849b] duration-300 ${
              Astro.url.pathname === '/work'
                ? 'text-[#07b6D5]'
                : 'text-gray-200 border-none'
            } `}>Work</a
          >
        </li>
        <li>
          <a
            href='https://blog.anfrydev.com'
            target='_blank'
            class={`text-lg transition ease-out hover:text-[#94849b] duration-300 ${
              Astro.url.pathname === '/blog'
                ? 'text-[#07b6D5]'
                : 'text-gray-200 border-none'
            } `}>Blog</a
          >
        </li>
        <li>
          <a
            href='/contact'
            class={`text-lg transition ease-out hover:text-[#94849b] duration-300 ${
              Astro.url.pathname === '/contact'
                ? 'text-[#07b6D5]'
                : 'text-gray-200 border-none'
            } `}>Contact</a
          >
        </li>
      </ul>
    </div>
  </div>
</div>
