---
import Icon from 'astro-icon';
---

<div class='flex items-center justify-between'>
  <a href='/' class='text-cyan-300 text-5xl'>AnfryDev</a>
  <nav class='max-md:hidden'>
    <ul class='flex items-center justify-center gap-x-8'>
      <a
        href='/'
        class={`text-xl transition ease-out hover:text-[#07B6D5] duration-300  ${
          Astro.url.pathname === '/'
            ? 'white border-b-2 border-slate-500 hover:text-white'
            : 'text-gray-400 border-none'
        } `}
      >
        <li>Home</li>
      </a>
      <a
        href='/about'
        class={`text-xl transition ease-out hover:text-[#07B6D5] duration-300 ${
          Astro.url.pathname === '/about'
            ? 'white border-b-2 border-slate-500 hover:text-white'
            : 'text-gray-400 border-none'
        } `}
      >
        <li>About</li>
      </a>
      <a
        href='/work'
        class={`text-xl transition ease-out hover:text-[#07B6D5] duration-300 ${
          Astro.url.pathname === '/work'
            ? 'white border-b-2 border-slate-500 hover:text-white'
            : 'text-gray-400 border-none'
        } `}
      >
        <li>Work</li>
      </a>
      <a
        href='https://blog.anfrydev.com'
        target='_blank'
        class={`text-xl transition ease-out hover:text-[#07B6D5] duration-300 ${
          Astro.url.pathname === '/blog'
            ? 'white border-b-2 border-slate-500 hover:text-white'
            : 'text-gray-400 border-none'
        } `}
      >
        <li>Blog</li>
      </a>
      <a
        href='/contact'
        class={`text-xl transition ease-out hover:text-[#07B6D5] duration-300 ${
          Astro.url.pathname === '/contact'
            ? 'white border-b-2 border-slate-500 hover:text-white'
            : 'text-gray-400 border-none'
        } `}
      >
        <li>Contact</li>
      </a>
    </ul>
  </nav>
  <div class='hidden max-md:block'>
    <div class='dropdown dropdown-end'>
      <label
        tabindex={0}
        class='transition ease-out btn m-1 bg-transparent shadow-sm shadow-[#07B6D5]/50 text-white hover:shadow-lg hover:shadow-[#07B6D5]/50 duration-300'
        ><Icon
          pack='jam'
          name='menu'
          class='text-slate-500 w-[36px] h-[36px] z-50'
        /></label
      >
      <ul
        tabindex={0}
        class='dropdown-content z-[1] menu p-2 shadow-sm shadow-slate-500/50 bg-[#18181b] rounded-box w-52'
      >
        <li>
          <a
            href='/'
            class={`text-lg transition ease-out hover:text-[#07B6D5] duration-300 ${
              Astro.url.pathname === '/'
                ? 'text-white'
                : 'text-gray-400 border-none'
            } `}>Home</a
          >
        </li>
        <li>
          <a
            href='/about'
            class={`text-lg transition ease-out hover:text-[#07B6D5] duration-300 ${
              Astro.url.pathname === '/about/'
                ? 'text-white'
                : 'text-gray-400 border-none'
            } `}>About</a
          >
        </li>
        <li>
          <a
            href='/work'
            class={`text-lg transition ease-out hover:text-[#07B6D5] duration-300 ${
              Astro.url.pathname === '/work/'
                ? 'text-white'
                : 'text-gray-400 border-none'
            } `}>Work</a
          >
        </li>
        <li>
          <a
            href='https://blog.anfrydev.com'
            target='_blank'
            class={`text-lg transition ease-out hover:text-[#07B6D5] duration-300 ${
              Astro.url.pathname === '/blog/'
                ? 'text-white'
                : 'text-gray-400 border-none'
            } `}>Blog</a
          >
        </li>
        <li>
          <a
            href='/contact'
            class={`text-lg transition ease-out hover:text-[#07B6D5] duration-300 ${
              Astro.url.pathname === '/contact/'
                ? 'text-white'
                : 'text-gray-400 border-none'
            } `}>Contact</a
          >
        </li>
      </ul>
    </div>
  </div>
</div>
